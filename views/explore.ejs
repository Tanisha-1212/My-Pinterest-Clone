<% include  ./partials/header.ejs %>

    <nav class="bg-white shadow p-4 flex justify-between items-center">
      <!-- Left: Logo and links -->
      <div class="flex items-center space-x-4">
        <a href="/" class="font-bold text-xl text-red-600">Pinterest</a>
        <a href="/explore" class="hover:text-gray-700 font-bold">Explore</a>
        <a href="/about" class="hover:text-gray-700 font-bold">About</a>
      </div>

      <!-- Search Bar -->
      <div class="flex-1 mx-4 relative max-w-xl">
        <form action="/search" method="GET">
          <!-- Search Icon -->
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">
            <i class="ri-search-line text-lg"></i>
          </span>

          <!-- Input Field -->
          <input 
            type="text" 
            name="q" 
            placeholder="Search for pins, boards, or users..." 
            class="w-full pl-10 pr-4 py-2 rounded-full bg-gray-100 text-gray-800 placeholder-gray-400 focus:outline-none  transition duration-200"
          />
        </form>
      </div>



        <!-- Right: Authentication -->
        <div class="flex items-center space-x-4">
            <a href="/login" class="bg-red-500 px-2 py-2  rounded-2xl text-white">Login</a>
            <a href="/signup" class="bg-red-500 px-2 py-2  rounded-2xl text-white">Signup</a>     
        </div>
    </nav>

<!--Categories-->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-10 px-4">
  <% categories.forEach(category => { %>
    <a href="/category/<%= category.name %>" class="block">
      <div class="relative rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
        
        <!-- Fixed height container for images -->
        <div class="h-48 w-full">
          <img src="<%= category.image %>" alt="<%= category.name %>"
               class="w-full h-full object-cover" />
        </div>

        <!-- Text overlay at bottom center -->
        <div class="absolute bottom-0 left-0 right-0 bg-opacity-50 text-white text-center py-2">
          <h3 class="text-lg font-semibold"><%= category.name %></h3>
        </div>
      </div>
    </a>
  <% }) %>
</div>





<% include  ./partials/footer.ejs %>