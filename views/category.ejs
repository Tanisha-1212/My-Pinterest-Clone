<%- include ./partials/header.ejs %>
<%- include ./partials/navbar.ejs %>

<div class="p-6 mt-20">
  <h1 class="text-3xl font-bold mb-4"><%= category.name %></h1>

  <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-4 space-y-2">
    <% category.pins.forEach(pin => { %>
      <div class="break-inside-avoid bg-white overflow-hidden mb-4">
        <img src="<%= pin.image %>" alt="<%= pin.title %>" class="w-full rounded-lg">
        <div class="p-1"><%= pin.title %></div>
      </div>
    <% }) %>
  </div>
</div>

<%- include ./partials/footer.ejs %>
