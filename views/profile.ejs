<% include  ./partials/header.ejs %>
<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs', { nav: true }) %>

    <div class="profile w-full min-h-screen bg-white text-black p-5 mt-16">
        <!--Hidden Upload form-->
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image"/>
        </form>

        <!--Profile Details-->
        <div class="profdets flex flex-col items-center m-5">
            <div class="relative">
                <span id="uploadicon" class="w-9 h-9 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-500 opacity-70">
                    <i class="text-black ri-pencil-fill"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover"
                        src="<%= user.profileImage || 'https://i.pinimg.com/736x/cb/65/c3/cb65c305f69b388b0f6a8353296efd07.jpg' %>" />
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-3"><%= user.username %></h1>
            <h3 class="text-md mb-2">@<%= user.email.split('@')[0] %></h3>
            <div class="flex flex-row gap-2">
            <a class="px-5 py-2 bg-zinc-300 rounded-xl">Edit Profile</a>
            <button class="px-5 py-2 bg-zinc-300 rounded-xl">Create Pin</button>
            </div>
        </div>

        <!--Boards-->
        <div class="cards flex flex-wrap gap-6 justify-center">
            <% boards.forEach(board => { %>
                <div class="card w-60 bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                
                <!-- Pins Section -->
                <div class="w-full h-40 flex">
                    <% if (board.pins.length === 1) { %>
                    <!-- Single pin fills entire space -->
                    <img class="w-full h-full object-cover" src="<%= board.pins[0].image %>" alt="<%= board.pins[0].title %>">
                    <% } else if (board.pins.length >= 2) { %>
                    <!-- Two pins side by side -->
                    <img class="w-1/2 h-full object-cover" src="<%= board.pins[0].image %>" alt="<%= board.pins[0].title %>">
                    <img class="w-1/2 h-full object-cover" src="<%= board.pins[1].image %>" alt="<%= board.pins[1].title %>">
                    <% } else { %>
                    <!-- No pins -->
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                        No Image
                    </div>
                    <% } %>
                </div>

                <!-- Board Info -->
                <div class="p-2">
                    <h3 class="text-lg font-semibold text-gray-800 truncate"><%= board.name %></h3>
                    <p class="text-sm text-gray-500 "><%= board.pins.length %> pins</p>
                </div>

                </div>
            <% }) %>
        </div>
    </div>

    <script>
    const uploadIcon = document.querySelector("#uploadicon");
    const fileInput = document.querySelector("#uploadform input");
    const profileImg = document.querySelector(".profdets img"); // your profile image

    uploadIcon.addEventListener("click", () => {
        fileInput.click();
    });

    fileInput.addEventListener("change", async () => {
        const formData = new FormData();
        formData.append("image", fileInput.files[0]);

        // Send file using fetch
        const response = await fetch("/fileupload", {
            method: "POST",
            body: formData
        });

        const data = await response.json();

        if(data.success) {
            // Update profile image src
            profileImg.src = data.filePath + "?t=" + new Date().getTime(); // cache-buster
        } else {
            alert("Upload failed");
        }
    });
    </script>


<% include  ./partials/footer.ejs %>