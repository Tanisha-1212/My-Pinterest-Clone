<% include  ./partials/header.ejs %>
<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs', { nav: true }) %>

    <div class="profile w-full min-h-screen bg-white text-black p-5 mt-16">
        <!--Hidden Upload form-->
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image"/>
        </form>

        <!--Profile Details-->
        <div class="profdets flex flex-col items-center m-5">
            <div class="relative">
                <span id="uploadicon" class="w-9 h-9 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-500 opacity-70">
                    <i class="text-black ri-pencil-fill"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover"
                        src="<%= user.profileImage || 'https://i.pinimg.com/736x/cb/65/c3/cb65c305f69b388b0f6a8353296efd07.jpg' %>" />
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-3"><%= user.username %></h1>
            <h3 class="text-md mb-2">@<%= user.email.split('@')[0] %></h3>
            <div class="flex flex-row gap-2">
            <a href="/edit-profile" class="px-5 py-2 bg-red-500 text-white rounded-xl hover:bg-black hover:text-white">Edit Profile</a>
            <a href="/createPin" class="px-5 py-2 bg-red-500 text-white rounded-xl hover:bg-black hover:text-white">Create Pin</a>
            </div>
        </div>

        <!--Boards-->
        <h2>Your Boards</h2>
        <% boards.forEach(board => { %>
         <a href="/boards/<%= board._id %>" class="font-bold text-lg hover:underline">   
        <div class="board mb-6">
            <h2 class="font-semibold text-lg mb-2"><%= board.name %></h2>
            <div class="flex flex-wrap gap-2">
            <% board.pins.slice(0, 4).forEach(pin => { %>
                <a href="/pins/<%= pin._id %>">
                <img src="<%= pin.image %>" class="w-16 h-16 object-cover rounded" />
                </a>
            <% }) %>
            </div>
        </div>
        </a>
        <% }) %>




    </div>

    <script>
    const uploadIcon = document.querySelector("#uploadicon");
    const fileInput = document.querySelector("#uploadform input");
    const profileImg = document.querySelector(".profdets img"); // your profile image

    uploadIcon.addEventListener("click", () => {
        fileInput.click();
    });

    fileInput.addEventListener("change", async () => {
        const formData = new FormData();
        formData.append("image", fileInput.files[0]);

        // Send file using fetch
        const response = await fetch("/fileupload", {
            method: "POST",
            body: formData
        });

        const data = await response.json();

        if(data.success) {
            // Update profile image src
            profileImg.src = data.filePath + "?t=" + new Date().getTime(); // cache-buster
        } else {
            alert("Upload failed");
        }
    });
    </script>


